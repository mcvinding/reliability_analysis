% Benchmarking errors

% Ordinal/binary data - one-sample case
N = 1000;
err = 0.1;  % Loop over this....

ranx = randperm(N);
init = [ones(1,N/2), zeros(1,N/2)];
truedat = init(ranx);
errdat = truedat;

rx = randperm(N);
slct = rx(1:N*err);

for ii = 1:length(slct)
    if errdat(slct(ii)) == 1
       errdat(slct(ii)) = 0;
    elseif errdat(slct(ii)) == 0
       errdat(slct(ii)) = 1;
    end
end

dat = [truedat; errdat];




